<div class="share uk-text-center{{#if class}} {{class}}{{/if}}">
    {{#if footer}}
    {{else}}
        {{#if page.share.title}}
            <p class="uk-text-lead">{{page.share.title}}</p>
        {{/if}}
    {{/if}}
    <ul class="uk-flex uk-flex-middle{{#if footer}}{{else}} uk-flex-center{{/if}} uk-flex-wrap uk-list">
        {{#if footer}}
            {{#each footerShare.items}}
                {{#with this}}    
                <li class="uk-margin-remove-top{{#if @last}}{{else}} uk-margin-small-right{{/if}}">
                    <a class="uk-border-circle uk-flex uk-flex-middle uk-flex-center" href="{{#if (eq this.name "envelope")}}mailto:{{this.src}}{{/if}}" {{#if (neq this.name "envelope")}}target="_blank" rel="nooperner nooperner"{{/if}} aria-label="{{this.label}}">
                        {{> renderIcon name=this.name}}
                    </a>
                </li>
                {{/with}}
            {{/each}}
            {{else}}        
            {{#each page.share.items}}
                {{#with this}}    
                <li class="uk-margin-remove-top{{#if @last}}{{else}} uk-margin-small-right{{/if}}">
                    <a class="uk-border-circle uk-flex uk-flex-middle uk-flex-center" href="{{#if (eq this.name "envelope")}}mailto:{{this.src}}{{/if}}" {{#if (neq this.name "envelope")}}target="_blank" rel="nooperner nooperner"{{/if}} aria-label="{{this.label}}">
                        {{> renderIcon name=this.name}}
                    </a>
                </li>
                {{/with}}
            {{/each}}
        {{/if}}
    </ul>
</div>