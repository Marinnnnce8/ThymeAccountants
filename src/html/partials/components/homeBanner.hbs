                        <span class="scroll"></span>
                    </div>
                    {{> renderIcon name="chevron-down" class="uk-position-bottom-center"}}
                </div>
                <img src="./img/banner-slider.png" loading="lazy" width="582" height="579" alt="Accountancy Services" class="uk-position-cover">
                <div class="menu uk-position-z-index uk-position-relative">
                    <ul class="menu-wrapper uk-list">
                        <li class="menu-item">
                            <a href="#">
                                <span>
                                    {{>renderIcon name="team-leader"}}
